<%= if live_flash(@flash, :notice) do %>
  <p class="shadow p-5 bg-green-300 rounded-md mb-6" role="alert">
    <%= live_flash(@flash, :notice) %>
  </p>
<% end %>

<%= if live_flash(@flash, :error) do %>
  <p class="shadow p-5 bg-red-300 rounded-md mb-6" role="alert">
    <%= live_flash(@flash, :error) %>
  </p>
<% end %>

<%= @inner_content %>
